            #tab1.tab-pane.container.active.show
                .flex-container
                    +flip-card("../../assets/images/tab_3.jpg", "Card 1", "This is a sample flip card")
                    +flip-card("../../assets/images/tab_4.jpg", "Card 1", "This is a sample flip card")
                    +flip-card("../../assets/images/acupuncture3.jpg", "Card 1", "This is a sample flip card")
            #tab2.tab-pane.container.fade
                .flex-container
                    +flip-card("../../assets/images/tab_1.jpg", "Card 1", "This is a sample flip card")
                    +flip-card("../../assets/images/tab_2.jpg", "Card 1", "This is a sample flip card")
                    +flip-card("../../assets/images/foot3.jpg", "Card 1", "This is a sample flip card")
            #tab3.tab-pane.container.fade
                .flex-container
                    +flip-card("../../assets/images/tab_5.jpg", "Card 1", "This is a sample flip card")
                    +flip-card("../../assets/images/tab_6.jpg", "Card 1", "This is a sample flip card")